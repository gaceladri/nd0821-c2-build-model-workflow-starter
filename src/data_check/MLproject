name: data_check
conda_env: conda.yml

entry_points:
  main:
    parameters:

      csv:
        description: Input CSV file to be tested
        type: string

      ref:
        description: Reference CSV file to compare the new csv to
        type: string

      kl_threshold:
        description: Threshold for the KL divergence test on the neighborhood group column
        type: float

      lower_interquantile:
        description: Minimum accepted price
        type: float

      higher_interquantile:
        description: Maximum accepted price
        type: float

    command: "pytest . -vv --csv {csv} --ref {ref} --kl_threshold {kl_threshold} \ 
                           --lower_interquantile {lower_interquantile} --higher_interquantile {higher_interquantile}"
